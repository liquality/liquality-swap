  "scripts": {
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "deuglify-bitcoinjslib": "sed -i.bak \"s/safari10: true,/safari10: true, keep_fnames: true,/g\" node_modules/react-scripts/config/webpack.config.prod.js",
    "build-js": "react-scripts build",
    "build-js-deuglify": "npm-run-all deuglify-bitcoinjslib build-js",
    "build": "npm-run-all build-css build-js-deuglify",
    "env:netlify": "export REACT_APP_COMMIT_REF=\"$COMMIT_REF\"",
    "config:testnet": "cp configs/liquality.io.testnet.config.js src/config/config.js",
    "config:mainnet": "cp configs/liquality.io.mainnet.config.js src/config/config.js",
    "build:testnet": "npm-run-all env:netlify config:testnet build-css build-js-deuglify",
    "build:mainnet": "npm-run-all env:netlify config:mainnet build-css build-js-deuglify",
    "test": "react-scripts test --env=jsdom --testPathIgnorePatterns=test/integration",
    "test:integration": "react-scripts test --env=jsdom --testPathPattern=test/integration",
    "eject": "react-scripts eject",
    "lint": "standard",
    "lint-fix": "standard --fix"
  },
  "devDependencies": {
    "node-sass-chokidar": "^1.3.5",
    "npm-run-all": "^4.1.3",
    "standard": "^11.0.1"
  },
  "standard": {
    "ignore": [
      "build/*"
    ]
  },
